@model FitnessApp.ViewModels.TrainingTrainersViewModel
@using FitnessApp.Repository
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit training</h2>


@using (Html.BeginForm("Edit", "TrainingTypes", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div>
        <div class="form-group">
            <div class="align-content-lg-start my-lg-2">
                <div class="w-25">
                    @Html.LabelFor(m => m.Name)
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="align-content-lg-start my-lg-2">
                <div class="w-25">
                    @Html.LabelFor(m => m.Description)
                    @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="align-content-lg-start my-lg-2">
                <div class="w-25">
                    @Html.LabelFor(m => m.TrainerId)
                    @Html.DropDownListFor(m => m.TrainerId, new SelectList(Model.Trainers, "Id", "FullName", Model.TrainerId), "Select trainer", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.TrainerId, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="align-content-lg-start my-lg-2">
                <div class="w-25">
                    @Html.LabelFor(m => m.Photo)
                    <input type="file" name="TrainingType.PhotoUpload" />
                </div>
            </div>
        </div>
        <br />
        <input type="hidden" name="Id" value="@Model.Id" />
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
}


